<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    {{>links}}
  </head>
  <body>

    <!-- Navbar -->
    {{>navbar}}
    <!-- Hero container -->
    <div class="fluid-container main_header">
      <div class="row">
        <div class="col-md-10 col-12 mx-auto">
          <div class="row">
            <!-- left side header -->
            <div class="col-md col-12 main_header_left">
              <p>Welcome to weather app</p>
              <h1>Get the latest <span>weather</span> info of your city.</h1>
              <button type="button" name="button">Check now</button>
            </div>
            <!-- right side header -->
            <div class="col-md col-12 main_header_right">
              <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                <div class="carousel-inner">
                  <div class="carousel-item active">
                    <img class="w-100" src="https://img.freepik.com/free-vector/happy-smiling-girl-with-umbrella-walking-rainy-day_179970-417.jpg?size=626&ext=jpg" alt="First slide">
                  </div>
                  <div class="carousel-item">
                    <img class="w-100" src="https://cdn0.tnwcdn.com/wp-content/blogs.dir/1/files/2019/01/weather-app-796x419.png" alt="Second slide">
                  </div>
                  <div class="carousel-item">
                    <img class="w-100" src="https://cdn0.tnwcdn.com/wp-content/blogs.dir/1/files/2019/01/weather-app-796x419.png" alt="Third slide">
                  </div>
                </div>
                <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                  <!-- <span class="carousel-control-prev-icon" aria-hidden="true"></span> -->
                  <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                  <!-- <span class="carousel-control-next-icon" aria-hidden="true"></span> -->
                  <span class="sr-only">Next</span>
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    {{>footer}}
  </body>
</html>
